pipeline {
  agent none
  options {
    disableConcurrentBuilds()
    buildDiscarder(logRotator(numToKeepStr: '30'))
    timestamps()
  }

  environment {
    AWS_REGION   = 'ap-northeast-2'
    ACCOUNT_ID   = '229816860374'
    ECR_REPO     = 'chat-websocket'
    ORG          = 'aws-devlopment-project'
    REPO         = 'backend-api-websocket'
    BUILD_CONTEXT= '/workspace'
    DOCKERFILE   = 'Dockerfile.websocket'
    GIT_BASIC_ID = 'jenkinstoken'
  }

  triggers { githubPush() }

  stages {
    stage('Checkout (for GIT_COMMIT)') {
      agent any
      steps { checkout scm }
    }

    stage('Ensure ArgoCD Image Updater GitHub Secret') {
      agent {
        kubernetes {
          label 'kube-tools'
          defaultContainer 'kubectl'
          serviceAccount 'jenkins-sa'
          yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins-sa
  containers:
  - name: kubectl
    image: bitnami/kubectl:1.29
    command: ['sleep']
    args: ['infinity']
    tty: true
"""
        }
      }
      steps {
        container('kubectl') {
          withCredentials([usernamePassword(credentialsId: env.GIT_BASIC_ID,
                                            usernameVariable: 'GH_USER',
                                            passwordVariable: 'GH_PASS')]) {
            sh '''
              set -e
              kubectl -n cicd create secret generic argocd-image-updater-git \
                --from-literal=username="$GH_USER" \
                --from-literal=password="$GH_PASS" \
                --dry-run=client -o yaml | kubectl apply -f -
            '''
          }
        }
      }
    }

    stage('Build & Push via Kaniko') {
      agent {
        kubernetes {
          label 'kube-tools'
          defaultContainer 'kubectl'
          serviceAccount 'jenkins-sa'
          yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins-sa
  volumes:
  - name: workspace-volume
    emptyDir: {}
  containers:
  - name: kubectl
    image: bitnami/kubectl:1.29
    command: ['sleep']
    args: ['infinity']
    tty: true
    volumeMounts:
    - name: workspace-volume
      mountPath: /home/jenkins/agent
"""
        }
      }
      steps {
        container('kubectl') {
          withCredentials([usernamePassword(credentialsId: env.GIT_BASIC_ID,
                                            usernameVariable: 'GH_USER',
                                            passwordVariable: 'GH_PASS')]) {
            sh '''
              set -e
              SHORT_SHA=$(echo "${GIT_COMMIT:-${BRANCH_NAME:-master}}" | cut -c1-7)
              IMAGE_TAG="sha-${SHORT_SHA}"
              GH_SECRET="gh-basic-ci-${BUILD_NUMBER}"

              # 1) GitHub 자격증명 임시 Secret 생성
              kubectl -n cicd create secret generic "$GH_SECRET" \
                --from-literal=username="$GH_USER" \
                --from-literal=password="$GH_PASS" \
                --dry-run=client -o yaml | kubectl apply -f -

              # 2) Kaniko Job 템플릿 치환
              sed -e "s|__ACCOUNT_ID__|${ACCOUNT_ID}|g" \
                  -e "s|__AWS_REGION__|${AWS_REGION}|g" \
                  -e "s|__ECR_REPO__|${ECR_REPO}|g" \
                  -e "s|__ORG__|${ORG}|g" \
                  -e "s|__REPO__|${REPO}|g" \
                  -e "s|__IMAGE_TAG__|${IMAGE_TAG}|g" \
                  -e "s|__GIT_REF__|${GIT_COMMIT:-${BRANCH_NAME:-master}}|g" \
                  -e "s|__GH_BASIC_SECRET__|${GH_SECRET}|g" \
                  -e "s|__BUILD_CONTEXT__|${BUILD_CONTEXT}|g" \
                  -e "s|__DOCKERFILE__|${DOCKERFILE}|g" \
                  infra/job-kaniko-template.yaml > rendered-kaniko.yaml

              # 3) Kaniko Job 실행
              kubectl -n cicd apply -f rendered-kaniko.yaml
              kubectl -n cicd wait --for=condition=complete job/kaniko-build-${IMAGE_TAG} --timeout=30m
              kubectl -n cicd logs -f job/kaniko-build-${IMAGE_TAG} -c kaniko || true

              # 4) 정리
              kubectl -n cicd delete job/kaniko-build-${IMAGE_TAG} --ignore-not-found
              kubectl -n cicd delete secret "$GH_SECRET" --ignore-not-found
            '''
          }
        }
      }
    }

    stage('Cleanup workspace') {
      agent any
      steps { cleanWs() }
    }
  }
}
